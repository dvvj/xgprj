      <HBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
      </HBox.margin>
      <Button fx:id="btnLogin" text="%login.doLogin" prefWidth="200.0" onAction="#onLogin" />
