<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="800.0"
      fx:controller="org.xg.ui.UiLoginController"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="BASELINE_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
      <HBox.margin>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
