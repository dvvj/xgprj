<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    spacing="5"
    fx:controller="org.xg.ui.comp.ProductInfoTableCellCtrl" alignment="CENTER">
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
    <Label fx:id="lblName" />
    <HBox>
        <Label fx:id="lblDetail" />
        <JFXButton text="%productInfo.showMore" styleClass="button-raised" minWidth="100" maxWidth="100" />
    </HBox>

</VBox>
