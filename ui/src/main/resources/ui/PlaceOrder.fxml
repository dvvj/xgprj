<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.xg.ui.comp.PlaceOrderCtrl"
      spacing="5">
    <HBox spacing="5">
        <JFXButton text="-" fx:id="btnMinus" onAction="#handleMinus1" styleClass="button-raised" maxWidth="30" minWidth="30" />
        <TextField fx:id="txtQty" text="1.00" maxWidth="100" minWidth="100" />
        <JFXButton text="+" fx:id="btnPlus" onAction="#handlePlus1" styleClass="button-raised" maxWidth="30" minWidth="30" />
        <JFXButton text="%placeOrder.buyNow" fx:id="btnBuyNow" onAction="#handlePurchase" styleClass="button-raised"/>
    </HBox>
    <Text fx:id="txtError" visible="false" stroke="Red" />
</VBox>
